{
  "name": "search-engine-server",
  "version": "0.0.1",
  "author": "M.Fakhreddin",
  "private": true,
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint ",
    "serve": "node build/bin/www.js prod",
    "dev": "nodemon build/bin/www.js dev",
    "watch": "npm run watch-ts",
    "test": "jest --forceExit --coverage --verbose",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect build/bin/www.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "mongod": "sudo mongod --dbpath local_db_storage --port 27018",
    "mongo": "mongo mongodb://127.0.0.1:27018/iran_forums?connectTimeoutMS=10000"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "colors": "1.2.4",
    "cookie-parser": "1.4.3",
    "crawler": "1.2.0",
    "debug": "3.1.0",
    "express": "4.16.3",
    "express-graphql": "0.6.12",
    "graphql": "0.13.2",
    "jade": "1.11.0",
    "joi": "13.3.0",
    "jsonwebtoken": "8.2.1",
    "mongoose": "5.0.14",
    "morgan": "1.9.0",
    "python-shell": "0.5.0",
    "socket.io": "2.1.1"
  },
  "devDependencies": {
    "@types/async": "2.0.49",
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/bluebird": "3.5.20",
    "@types/body-parser": "1.16.8",
    "@types/compression": "0.0.36",
    "@types/cookie-parser": "1.4.1",
    "@types/crypto-js": "3.1.40",
    "@types/dotenv": "4.0.3",
    "@types/errorhandler": "0.0.32",
    "@types/express": "4.11.1",
    "@types/express-session": "1.15.8",
    "@types/graphql": "0.13.0",
    "@types/jest": "22.2.3",
    "@types/joi": "13.0.8",
    "@types/lodash": "4.14.107",
    "@types/lusca": "1.5.0",
    "@types/mongoose": "5.2.0",
    "@types/morgan": "1.7.35",
    "@types/node": "9.6.5",
    "@types/nodemailer": "4.6.0",
    "@types/passport": "0.4.4",
    "@types/passport-facebook": "2.1.8",
    "@types/passport-local": "1.0.33",
    "@types/request": "2.47.0",
    "@types/shelljs": "0.7.8",
    "@types/socket.io": "^1.4.36",
    "@types/supertest": "2.0.4",
    "@types/winston": "2.3.9",
    "chai": "4.1.2",
    "concurrently": "3.5.1",
    "jest": "22.4.3",
    "mockgoose": "^7.3.5",
    "nodemon": "1.17.3",
    "supertest": "3.0.0",
    "ts-jest": "22.4.6",
    "ts-node": "5.0.1",
    "tslint": "5.9.1",
    "typescript": "3.1.6"
  },
  "jest": {
    "automock": false,
    "moduleFileExtensions": [
      "js"
    ],
    "setupFiles": [],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/",
      "<rootDir>/lib/"
    ],
    "cacheDirectory": ".jest/cache"
  }
}
